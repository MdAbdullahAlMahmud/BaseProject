<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.dashboard.live_exam.quiz_content.LiveQuizContentFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">


    <include
        layout="@layout/live_quiz_item"/>

    <LinearLayout
        android:id="@+id/filterLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/_3sdp"
        android:layout_margin="@dimen/_8sdp"
        android:background="@drawable/quiz_filter_button_background">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/btnUpcoming"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/limit_right_corner_background"
            android:gravity="center"
            android:paddingHorizontal="@dimen/_6sdp"
            android:paddingVertical="@dimen/_5sdp"
            android:text="@string/upcoming"
            style="@style/open_sans_semi_bold_14" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/btnArchived"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/limit_left_corner_background"
            android:gravity="center"
            android:paddingHorizontal="@dimen/_6sdp"
            android:paddingVertical="@dimen/_5sdp"
            android:text="@string/archived"
            style="@style/open_sans_semi_bold_14"
            android:textColor="@color/filter_text_color"
            />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/liveQuizListRV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:itemCount="3"
        tools:listitem="@layout/live_quiz_item"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        />
    </LinearLayout>

</ScrollView>